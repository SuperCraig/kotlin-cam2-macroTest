<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:startColor="@color/transparent" android:centerColor="@color/transparent"
                android:centerY="0.75" android:endColor="@color/transparent" android:angle="90"/>
            <stroke android:width="5dp" android:color="#FF5722"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient android:startColor="#FF9800" android:endColor="#FF5722"
                    android:angle="90"/>
                <stroke android:width="5dp" android:color="#FF5722"/>
            </shape>
        </clip>
    </item>
</layer-list>